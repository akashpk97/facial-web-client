<html> 
<head>

  <!-- Bootstrap CSS File -->
  <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
<script src="/lib/jquery/jquery.min.js"></script>
<script src="/lib/bootstrap/js/bootstrap.min.js"></script>
</head>

<body>
<div class = "container">
 <nav class="navbar navbar-default">
    <div class = "container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Atendance System Control Panel</a>
    </div>
        <ul class = "nav navbar-nav">
          <li class="active"><a href="#intro">Home</a></li>
          <li><a href="#about">About Us</a></li>
          <li><a href="#team">Team</a></li>
          <li><a href="#footer">Contact Us</a></li>
        </ul>
     </div>
   </nav>
<div class = "container">
<div class = "grid">
<div class = "row">
<label> Attendence Details for subject <b> <%= attendance["subject"] %> </b> on <b> <%= attendance["date"] %> </b> is as follows: </label>
</div>
<hr>
<table class = "table">
<thead class = "thead-dark">
<tr>
<th>Sl.No</th>
<th>Roll Number </th>
<th> Name </th>
<th> Class Time </th>
<th> Attendance Status  </th>
</tr>
</thead>
<% var len = 0, pre = 0, abs = 0, time = "";
   for(var i = 0; i < present_students.length; i++) { %>
<tr>
<td> <%= len + 1 %> </td>
<td> <%= present_students[i].Roll %> </td>
<td> <%= present_students[i].Name %> </td>
<td> <%= present_students[i].Time %> </td>
<td class = "text-success"> Present </td>
</tr>
<% time = present_students[i].Time; len++; pre++ } %>
<% for(var i = 0; i < absent_students.length; i++) { %>
<% if(absent_students[i] != undefined) { %>
<tr>
<td> <%= len + 1 %> </td>
<td> <%= absent_students[i].Id %> </td>
<td> <%= absent_students[i].Name %> </td>
<td> <%= time %> </td>
<td class = "text-danger"> Absent </td>
</tr>
<% len++; abs++} %>
<% } %>
</table>

</div>
</div>
<hr>
<div class = "row">
<p><label> Total Number of students : <%= len %> </label> </p> <br>
</div>
<div class = "row">
<p class = "text-success"><label> Total Number of students present : <%= pre %></label> </p> <br>
</div>
<div class = "row">
<p class = "text-danger"><label> Total Number of students absent: <%= abs %></label> </p> <br>
</div>
<hr>
<div class = "row">
  <div class="footer-copyright text-center py-3">&copy; 2019 Copyright:
    Sangeetha K R and Team, AIT Bangalore.
  </div>
</div>
</div>
</body>
</html>